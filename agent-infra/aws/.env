# AWS EKS Deployment Configuration
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012  # TODO: Replace with your AWS account ID

# Project Configuration
PROJECT_NAME=agent
ENVIRONMENT=prod

# Domain Configuration  
EXAMPLE_API_DOMAIN=example-api.yourdomain.com  # TODO: Replace with your actual domain
AGENT_API_DOMAIN=agent-api.yourdomain.com      # TODO: Replace with your actual domain

# ECR Repository URLs (filled automatically after terraform apply)
EXAMPLE_API_ECR_URL=
AGENT_API_ECR_URL=

# Terraform Backend Configuration
TERRAFORM_STATE_BUCKET=your-terraform-state-bucket  # TODO: Replace with your S3 bucket name
TERRAFORM_STATE_KEY=agent/terraform.tfstate
TERRAFORM_STATE_REGION=us-west-2

# EKS Configuration
CLUSTER_NAME=agent-prod
NODE_GROUP_DESIRED_SIZE=3
NODE_GROUP_MAX_SIZE=10
NODE_GROUP_MIN_SIZE=1

# GitHub Actions (set in GitHub repository secrets)
# AWS_ROLE_ARN=arn:aws:iam::123456789012:role/github-actions-role